<h6 class="white-textw">Dashboard</h6>
<h1 class="white-texwt" >Hi! {{name}}</h1>

{{#if stories}}
    <p class="white-texwt">Here are your ImPosts</p>
    <table class="striped" style="margin-bottom: 50px;">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                {{!-- for delete --}}
                <th></th>
            </tr>
        </thead>

        <tbody>
          
                {{#each stories}}

                        <tr>
                            {{!-- link to go to the story --}}
                            <td><a href="/stories/{{_id}}">{{title}}</a></td>
                            <td>{{formatDate createdAt 'dddd, MMMM Do YYYY, h:mm:ss a'}}</td>
                            <td><span class="dash-status">{{status}}</span></td>
                            <td>
                                <a href="/stories/edit/{{_id}}" class="btn-btn-float"><i class="fas fa-edit "></i></a>
                                <form action="/stories/{{_id}}" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                   <button type="submit" > <i class="fas fa-trash "></i></button>
                                </form>
                            </td>
                        </tr>


                {{/each}}
            
        </tbody>
    </table>

{{else}}

    <p>You don't have any posts yet</p>

{{/if}}